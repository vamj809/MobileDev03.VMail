<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="MobileDev03.VMail.Views.HomePage"
             xmlns:viewModels="clr-namespace:MobileDev03.VMail.ViewModels" 
             >
    <ContentPage.BindingContext>
        <viewModels:HomeViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Enviar" Order="Primary"/>
    </ContentPage.ToolbarItems>
    <CollectionView ItemsSource="{Binding Mails}" SelectionMode="Single">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Grid Padding="10"
                      RowDefinitions="Auto,Auto,Auto"
                      ColumnDefinitions="*,*,*,*">
                    <Label 
                        Grid.Row="0" Grid.RowSpan="3"
                        Grid.Column="0"
                        Text="{Binding SenderInitial}" FontSize="Large" HorizontalOptions="StartAndExpand"/>
                    <Label 
                        Grid.Row="0" 
                        Grid.Column="1" 
                        Text="{Binding Recipient}" FontSize="Large" HorizontalOptions="StartAndExpand"/>
                    <Label Grid.Row="1" Grid.Column="1" Text="{Binding Subject}" FontSize="Small" HorizontalOptions="StartAndExpand"/>
                    <Label Grid.Row="2" Grid.Column="1" Text="{Binding Body}" FontSize="Small" HorizontalOptions="StartAndExpand"/>
                    <Label Grid.Row="0" Grid.Column="2" Text="{Binding CreationDate.TimeOfDay}" FontSize="Small" HorizontalOptions="EndAndExpand"/>
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>